<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="7dp"
    android:clickable="false"
    app:cardElevation="5dp">

    <!---app:cardBackgroundColor="@android:color/transparent"

      xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    android:clickable="false"
    android:layout_margin="3dp"
    app:cardElevation="3dp"
    android:gravity="center_horizontal">

-->
<RelativeLayout
    android:layout_width="match_parent"
    android:padding="3dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <nf.co.hoproject.genapp.RoundedImageView
        android:id="@+id/android_gridview_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/android_gridview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLA"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/android_gridview_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/descG"
        android:layout_below="@+id/android_gridview_text"
        android:layout_alignLeft="@+id/android_gridview_text"
        android:layout_alignBottom="@+id/android_gridview_image"
        android:layout_alignParentRight="true" />

</RelativeLayout>

</android.support.v7.widget.CardView>