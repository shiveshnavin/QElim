<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="4dp"
    android:layout_margin="2dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/btn_sel"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/back"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
<LinearLayout
    android:visibility="gone"
    android:weightSum="9"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true">
    <LinearLayout
        android:layout_weight="6"
    android:orientation="vertical"
    android:weightSum="6"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

        <nf.co.hoproject.genapp.RoundedImageView

            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:id="@+id/itempic"></nf.co.hoproject.genapp.RoundedImageView>

        <com.daniribalbert.customfontlib.views.CustomFontTextView
            app:font="CaviarDreams"
            android:layout_weight="5"
            android:textColor="@color/green_400"
            android:gravity="center_horizontal"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Save 5%"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/save"></com.daniribalbert.customfontlib.views.CustomFontTextView>



    </LinearLayout>



    <LinearLayout
        android:layout_width="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_600"
        android:layout_height="match_parent"></LinearLayout>




    <LinearLayout
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.daniribalbert.customfontlib.views.CustomFontTextView
            app:font="CaviarDreams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/item" />

        <RatingBar

            android:id="@+id/ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4"
            android:layout_marginTop="5dp"
            style="?android:attr/ratingBarStyleSmall"
            android:backgroundTint="@color/ratingbar"
            android:secondaryProgressTint="@color/ratingbar"
            android:progressTint="@color/ratingbar"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">


            <TextView
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MRP:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MRP:"
                android:id="@+id/mrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_weight="3"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MRP:"
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <Spinner
                android:id="@+id/quan"
                android:layout_weight="0.3"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"></Spinner>

            <TextView

                android:textColor="@color/white"
                android:layout_weight="0.3"
                android:text="Add to cart"
android:padding="7dp"
                android:background="@drawable/cart_sel"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/addtocart"
                android:visibility="gone" />




        </LinearLayout>
    </LinearLayout>





</LinearLayout>

</LinearLayout>
</RelativeLayout>