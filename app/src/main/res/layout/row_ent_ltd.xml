<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_myapp"
    android:background="@drawable/btn_sel_hws"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="5dp"
        android:id="@+id/android_custom_gridview_layout"
        android:clickable="true"
        card_view:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="150dp"
                android:id="@+id/android_gridview_image">
        </ImageView>



                <com.daniribalbert.customfontlib.views.CustomFontTextView
                    app:font="Avenir-Medium"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Title"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/android_gridview_text"/>


                <com.daniribalbert.customfontlib.views.CustomFontTextView
                    app:font="Avenir-Medium"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5"
                    android:id="@+id/rate">

                </com.daniribalbert.customfontlib.views.CustomFontTextView>

        </LinearLayout>


</android.support.v7.widget.CardView>



    <com.daniribalbert.customfontlib.views.CustomFontTextView
                app:font="Roboto-Thin"
            android:textSize="12sp"
        android:maxLines="2"
                android:text="C-15,Lower Parel,Mumbai"
                android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:gravity="top|left"
                android:id="@+id/descG">
            </com.daniribalbert.customfontlib.views.CustomFontTextView>

    <com.daniribalbert.customfontlib.views.CustomFontTextView
        app:font="Roboto-Thin"
        android:textSize="12sp"
                android:text="7 Km Away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dist">
            </com.daniribalbert.customfontlib.views.CustomFontTextView>




    <com.daniribalbert.customfontlib.views.CustomFontTextView
        app:font="Avenir-Medium"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="5 PEOPLE LIVE NOW"
        android:id="@+id/live">




    </com.daniribalbert.customfontlib.views.CustomFontTextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:padding="1dp"
            android:layout_margin="5dp"
            android:background="@color/red"
            android:layout_height="match_parent">

    <com.daniribalbert.customfontlib.views.CustomFontTextView
        app:font="Avenir-Medium"
                android:background="@drawable/btn_sel_wred"
                android:gravity="center"
                android:text="CHECK IN"
                android:layout_weight="0.5"
        android:textColor="@color/red_400"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/checkin" />


        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:padding="1dp"
            android:layout_margin="5dp"
            android:background="@color/red"
            android:layout_height="match_parent">

    <com.daniribalbert.customfontlib.views.CustomFontTextView
        app:font="Avenir-Medium"
                android:background="@drawable/btn_sel_wred"
                android:gravity="center"
        android:textColor="@color/red_400"
        android:text="DISCOVER PEOPLE"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/disc" />



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
